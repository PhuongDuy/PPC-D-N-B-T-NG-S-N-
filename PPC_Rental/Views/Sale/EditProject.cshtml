
@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/LayoutSale.cshtml";
}
@using PPC_Rental.Models;
@model IEnumerable<PPC_Rental.Models.PROPERTY>

<!DOCTYPE html>
<html>
<body>
    <div>
        <div class="col-md-1">
            <img src="~/Images/ImageSale/if_scroll left_36560.png" style="width:38px; margin-left: 50%" />
        </div><h1>Danh sách dự án \ Edit</h1>
    </div>
    <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;">
        <div class="container-fluid" style="margin-top: 10px">
            <div class="col-md-3">
                <select class="sale-select-option">
                    <option>Tên dự án</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="sale-select-option1">
                    <option>Loại</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="sale-select-option1">
                    <option>Quận</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="sale-select-option">
                    <option>Đường</option>
                </select>
            </div>
            <div class="col-md-3 text-right" style="font-size:18px;">
                <button type="submit" style="border-radius : 5px;margin-right: 20px;"><span class="glyphicon glyphicon-search"></span> Tìm kiếm</button>
                <img src="~/Images/ImageSale/if_edit_add_3219.png" style="width: 18px;" />
                <button type="button" style="font-size:18px;border-radius : 5px;">Add</button>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="col-md-6" style="margin-top: 0;">
        <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: deepskyblue">
            <div class="container-fluid" style="margin-top: 10px;margin-bottom: 0;padding-left: 20px;">
                <p style="margin-bottom: 0;color: white;font-size: 20px">Thông tin dự án</p>
            </div>
        </nav>
        <div class="container-fluid" style="border: 1px solid;">
            <div style="padding: 10px;">
                <div class="input-group">
                    <span class="input-group-addon">ID :</span>
                    <p style="margin-top:10px;margin-left: 20px;"></p>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">ProjectName :</span>
                    <input id="proname" type="text" class="form-control" name="projectname" placeholder="Tên dự án">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">ProjectType :</span>
                    <select id="protype" class="form-control" name="projecttype" style="width: 100px;"><option></option></select>
                    <span class="input-group-addon">Price :</span>
                    <input id="price" type="text" class="form-control" name="price" placeholder="Giá">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Avatar :</span>
                    <input id="avatar" type="file" class="form-control" name="avatar" placeholder="Avatar">
                    <span class="input-group-addon">UnitPrice :</span>
                    <select id="unitprice" class="form-control" name="unitprice" style="width: 80px;"><option></option></select>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Area :</span>
                    <input id="area" type="text" class="form-control" name="area" placeholder="Diện tích">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Images :</span>
                    <input id="image" type="file" class="form-control" name="image" placeholder="Hình ảnh">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Content :</span>
                    <textarea id="content" type="text" class="form-control" name="content" placeholder="Nội dung"></textarea>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">BedRoom :</span>
                    <select id="badroom" class="form-control" name="bebroom">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                    <span class="input-group-addon">BethRoom :</span>
                    <select id="bathroom" class="form-control" name="bethroom">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">PackingPlace :</span>
                    <select id="packingplace" class="form-control" name="packingplace" style="width: 170px;">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">User :</span>
                    <p style="margin-top:10px;margin-left: 20px;"></p>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Craeted at :</span>
                    <p style="margin-top:10px;margin-left: 20px;"></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6" style="margin-top: 0;padding-left: 10px;padding-right: 10px;">
        <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: deepskyblue">
            <div class="container-fluid" style="margin-top: 10px;margin-bottom: 0;padding-left: 20px;">
                <p style="margin-bottom: 0;color: white;font-size: 20px">Tiện tích</p>
            </div>
        </nav>
        <div class="container-fluid" style="border: 1px solid;">
            <div style="padding: 10px;">
                <div class="input-group">
                    <span class="input-group-addon">Ban công :</span>
                    <input id="bancong" type="checkbox" class="form-control-radio" name="bancong" placeholder="Co"> Có
                    <span class="input-group-addon">Phòng giặc ủi :</span>
                    <input id="giacui" type="radio" class="form-control-radio" name="giacui" placeholder="Co"> Có
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Chỗ đậu xe :</span>
                    <input id="dauxe" type="checkbox" class="form-control-radio" name="dauxe" placeholder="Co"> Có
                    <span class="input-group-addon">Hồ bơi :</span>
                    <input id="hoboi" type="checkbox" class="form-control-radio" name="hoboi" placeholder="Co"> Có
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Thang máy :</span>
                    <input id="thangmay" type="checkbox" class="form-control-radio" name="thangmay" placeholder="Co"> Có
                    <span class="input-group-addon">Sàn gỗ :</span>
                    <input id="sango" type="checkbox" class="form-control-radio" name="sango" placeholder="Co"> Có
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Vườn :</span>
                    <input id="vuon" type="checkbox" class="form-control-radio" name="vuon" placeholder="Co"> Có
                    <span class="input-group-addon">Bảo vệ :</span>
                    <input id="baove" type="checkbox" class="form-control-radio" name="baove" placeholder="Co"> Có
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Phòng tập gym :</span>
                    <input id="gym" type="checkbox" class="form-control-radio" name="gym" placeholder="Co"> Có
                    <span class="input-group-addon">Thú cưng :</span>
                    <input id="thucung" type="checkbox" class="form-control-radio" name="thucung" placeholder="Co"> Có
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Nhà bếp :</span>
                    <input id="bep" type="checkbox" class="form-control-radio" name="bep" placeholder="Co"> Có
                </div>
            </div>
        </div>
        <br />
        <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: deepskyblue">
            <div class="container-fluid" style="margin-top: 10px;margin-bottom: 0;padding-left: 20px;">
                <p style="margin-bottom: 0;color: white;font-size: 20px">Địa chỉ</p>
            </div>
        </nav>
        <div class="container-fluid" style="border: 1px solid;">
            <div style="padding: 10px;">
                <div class="input-group">
                    <span class="input-group-addon">City :</span>
                    <p style="margin-top:10px;margin-left: 10px;">HCM</p>
                    <span class="input-group-addon">District :</span>
                    <select id="district" class="form-control" name="district"><option></option></select>
                    <span class="input-group-addon">Ward :</span>
                    <select id="ward" class="form-control" name="ward"><option></option></select>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Street :</span>
                    <select id="street" class="form-control" name="street"><option></option></select>
                </div>
            </div>
        </div>
        <br />
        <nav class="navbar navbar-default" role="navigation" style="border: 1px solid;margin : 0;background-color: deepskyblue">
            <div class="container-fluid" style="margin-top: 10px;margin-bottom: 0;padding-left: 20px;">
                <p style="margin-bottom: 0;color: white;font-size: 20px">Quản lý :</p>
            </div>
        </nav>
        <div class="container-fluid" style="border: 1px solid;">
            <div style="padding: 10px;">
                <div class="input-group">
                    <span class="input-group-addon">Sale :</span>
                    <p style="margin-top:10px;margin-left: 20px;"></p>
                    <span class="input-group-addon">Updated at :</span>
                    <p style="margin-top:10px;margin-left: 20px;"></p>
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Status :</span>
                    <select id="status" class="form-control" name="status" style="width: 100px;"><option></option></select>
                    <span class="input-group-addon">Note :</span>
                    <input id="note" type="text" class="form-control" name="note" placeholder="....">
                </div>
            </div>
        </div>
        <br />
        <div style="text-align:right;">
            <button type="button" style="margin-right: 20px;border-radius : 5px;background-color: #3377ff; font-size: 16px;width: 100px;padding: 5px;">Quay lại</button>
            <button type="button" style="border-radius : 5px;background-color: #3377ff; font-size: 16px;width: 100px;padding: 5px;">Lưu</button>
        </div>
    </div>

</body>
</html>

